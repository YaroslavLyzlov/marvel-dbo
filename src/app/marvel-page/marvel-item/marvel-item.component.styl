:host
  display flex
  justify-content center

.marvel-item
  &__image
    max-width 100vw
  &__anchor
    position absolute
    //background-color red
    //opacity .2
    opacity 0
    transition: all .2s cubic-bezier(.645,.045,.355,1);
    &--show
      opacity 1
      box-shadow: inset 0 0 0 2px #007ec1, 0 2px 4px 0 rgba(0,0,0,.1);
      background-color: rgba(154,220,255,.6);
  &__wrapper
    position relative
